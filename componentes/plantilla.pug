-var titulo = "Sub-titulo Principal"
-var titulos = ["Titulo Principal", "Subtitulo 1", "Subtitulo 2", "Subtitulo 3"]
-var enlaces = ["Acerca", "Noticias", "Contacto"]
mixin caja(imagen,titulo,contenido)
	.caja
		.caja__imagen: img(src="images/"+imagen)
		.caja__contenido
			h3=titulo
			p=contenido
doctype html
html
	include head.pug
	body
		section.container
			header
				h1 PlatziGames
				if usuario
					a Hola #{usuario}
				else
					a.boton Registro
			block contenidos
			include footer.pug